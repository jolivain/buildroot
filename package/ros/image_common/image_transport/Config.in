config BR2_PACKAGE_IMAGE_TRANSPORT
	bool "image_transport"
	select BR2_PACKAGE_CMAKE_MODULES
	select BR2_PACKAGE_COMMON_MSGS_SET
	select BR2_PACKAGE_MESSAGE_FILTERS
	select BR2_PACKAGE_PLUGINLIB
	select BR2_PACKAGE_ROSCONSOLE
	select BR2_PACKAGE_ROSCPP
	select BR2_PACKAGE_ROSLIB
	select BR2_PACKAGE_ROS_COMM_SET
	select BR2_PACKAGE_ROS_SET
	select BR2_PACKAGE_SENSOR_MSGS
	help
	  image_transport should always be used to subscribe to and
	  publish images. It provides transparent support for
	  transporting images in low-bandwidth compressed
	  formats. Examples (provided by separate plugin packages)
	  include JPEG/PNG compression and Theora streaming video.

	  http://wiki.ros.org/image_transport
